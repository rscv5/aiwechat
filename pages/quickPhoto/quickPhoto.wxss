/* pages/quickPhoto/quickPhoto.wxss */
/* 容器样式 */
.container {
  min-height: 100vh;
  background: #F8F8F8;
  padding-bottom: calc(env(safe-area-inset-bottom) + 90rpx);
  display: flex;
  flex-direction: column;
}

/* 渐变背景 */
.gradient-bg {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 240rpx;
  background: linear-gradient(135deg, #4A90E2 0%, #6AB5F3 100%);
  z-index: 1;
}

/* 主要内容区域 */
.content-wrapper {
  position: relative;
  z-index: 2;
  padding: 16rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
}

/* 照片上传区域 */
.photo-section {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 16rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  margin-bottom: 16rpx;
}

.section-title .title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}

.section-title .subtitle {
  font-size: 24rpx;
  color: #999999;
  margin-left: 16rpx;
}

.photo-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
}

.photo-item {
  position: relative;
  aspect-ratio: 1;
  background: #F5F5F5;
  border-radius: 8rpx;
  overflow: hidden;
}

.uploaded-photo {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.delete-btn {
  position: absolute;
  top: 6rpx;
  right: 6rpx;
  width: 32rpx;
  height: 32rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-icon {
  color: #FFFFFF;
  font-size: 24rpx;
  line-height: 1;
}

.add-photo {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
  border: 2rpx dashed #DDDDDD;
  background: #FFFFFF;
}

.add-icon {
  font-size: 36rpx;
  color: #4A90E2;
  line-height: 1;
}

.add-photo text:last-child {
  font-size: 22rpx;
  color: #999999;
}

/* 表单区域 */
.form-section {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  flex: 1;
}

.form-item {
  position: relative;
  margin-bottom: 16rpx;
}

.textarea {
  width: 100%;
  min-height: 140rpx;
  padding: 12rpx;
  box-sizing: border-box;
  border: 2rpx solid #EEEEEE;
  border-radius: 8rpx;
  font-size: 26rpx;
  line-height: 1.5;
}

.word-count {
  position: absolute;
  bottom: 6rpx;
  right: 12rpx;
  font-size: 22rpx;
  color: #999999;
}

.input-field {
  padding: 12rpx;
  margin-bottom: 12rpx;
  border-bottom: 2rpx solid #EEEEEE;
}

.input-field.disabled {
  color: #999999;
}

.input-field input {
  width: 100%;
  font-size: 26rpx;
}

.location-section {
  margin: 16rpx 0;
}

.location-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
  padding: 0 12rpx;
}

.location-header text {
  font-size: 26rpx;
  color: #333333;
}

.location-btn {
  font-size: 22rpx;
  color: #4A90E2;
  background: none;
  border: none;
  padding: 0;
  line-height: 1;
}

.location-btn::after {
  display: none;
}

/* 底部区域 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFFFFF;
  padding: 12rpx 16rpx calc(12rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
  z-index: 10;
}

.tip {
  font-size: 22rpx;
  color: #999999;
  margin-bottom: 8rpx;
  display: block;
}

.submit-btn {
  width: 100%;
  height: 76rpx;
  line-height: 76rpx;
  background: #4A90E2;
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 8rpx;
  border: none;
}

.submit-btn.disabled {
  background: #CCCCCC;
}

.submit-btn::after {
  display: none;
}

/* Vant组件样式覆盖 */
.van-field {
  padding: 20rpx !important;
}

.van-button--primary {
  background: #4A90E2 !important;
  border-color: #4A90E2 !important;
}