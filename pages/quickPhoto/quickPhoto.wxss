/* pages/quickPhoto/quickPhoto.wxss */
/* 容器样式 */
.container {
  min-height: 100vh;
  background: #FFF9F0;
  padding-bottom: calc(env(safe-area-inset-bottom) + 120rpx);
}

/* 渐变背景 */
.gradient-bg {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 240rpx;
  background: linear-gradient(135deg, #FF9900 0%, #FFB84D 100%);
  z-index: 1;
}

/* 主要内容区域 */
.content-wrapper {
  position: relative;
  z-index: 2;
  padding: 16rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
}

/* 卡片样式 */
.card-section {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(0,0,0,0.04);
  margin-bottom: 32rpx;
  padding: 32rpx;
}

/* 照片上传区域 */
.photo-section,
.form-section {
  background: #FFF9F0;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 153, 0, 0.06);
}

.section-title {
  margin-bottom: 16rpx;
}

.section-title .title {
  color: #FF9900;
  font-size: 32rpx;
  font-weight: bold;
}

.section-title .subtitle,
.add-photo text:last-child {
  color: #FFB84D;
}

/* 图片上传区 */
.photo-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.photo-item, .add-photo {
  background: #FFF7E6;
  border-radius: 20rpx;
  overflow: hidden;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 180rpx;
}

.uploaded-photo {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.delete-btn {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0,0,0,0.12);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-icon {
  color: #FFFFFF;
  font-size: 24rpx;
  line-height: 1;
}

.add-photo {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
  border: 2rpx dashed #DDDDDD;
  background: #FFFFFF;
}

.add-icon {
  font-size: 36rpx;
  color: #FF9900;
  line-height: 1;
}

/* 输入框 */
.input-field, .textarea {
  background: #FFF7E6;
  border: 2rpx solid #FFE0B2;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  height: 80rpx;
  margin-bottom: 24rpx;
}

.input-field input {
  background: transparent;
  border: none;
  font-size: 30rpx;
  height: 100%;
}

.input-field.disabled {
  color: #BFAE99;
  background: #FDF6EC;
}

/* 按钮 */
.submit-btn {
  min-width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  border-radius: 36rpx;
  background: #FF9900;
  color: #fff;
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx rgba(255,153,0,0.08);
}

.submit-btn.disabled,
.submit-btn[disabled] {
  background: #E0E0E0;
  color: #fff;
}

/* 其他细节优化 */
.form-item {
  margin-bottom: 24rpx;
}

.textarea {
  min-height: 140rpx;
  padding: 16rpx 24rpx;
  resize: none;
}

.location-section {
  margin: 16rpx 0;
}

.location-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding: 0 8rpx;
}

.location-header text {
  font-size: 30rpx;
  color: #333;
}

.location-btn {
  font-size: 28rpx;
  color: #FF9900;
  background: #FFF7E6;
  border: none;
  border-radius: 32rpx;
  padding: 0 36rpx;
  height: 64rpx;
  line-height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.location-btn::after {
  display: none;
}

/* 底部提交栏 */
.submit-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  background: #fff;
  border-top: 1rpx solid #e6e6e6;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100vw;
  box-sizing: border-box;
  z-index: 100;
}

.submit-tip {
  color: #888;
  font-size: 28rpx;
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  display: flex;
  align-items: center;
  height: 80rpx;
}

/* Vant组件样式覆盖 */
.van-field {
  padding: 20rpx !important;
}

.van-button--primary {
  background: #e2da4a !important;
  border-color: #e27a4a !important;
}