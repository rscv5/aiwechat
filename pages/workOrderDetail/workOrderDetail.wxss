.detail-container {
  padding: 30rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #3498db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 错误提示 */
.error {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.error image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.retry-btn {
  margin-top: 30rpx;
  background: #3498db;
  color: #fff;
  border-radius: 8rpx;
  padding: 16rpx 32rpx;
}

/* 状态卡片 */
.status-card {
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.status {
  display: inline-block;
  padding: 8rpx 24rpx;
  border-radius: 6rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.status.pending {
  background: #fff3e0;
  color: #f57c00;
}

.status.processing {
  background: #e3f2fd;
  color: #1976d2;
}

.status.reported {
  background: #e8f5e9;
  color: #388e3c;
}

.status.done {
  background: #e8f5e9;
  color: #388e3c;
}

/* 信息卡片 */
.info-card {
  background: #fff;
  padding: 32rpx 24rpx;
  border-radius: 16rpx;
  margin-bottom: 28rpx;
  box-shadow: 0 2rpx 8rpx #f0f0f0;
}

.card-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 18rpx;
  display: block;
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 18rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
}

.info-label {
  width: 120rpx;
  color: #666;
  font-size: 28rpx;
}

.info-value {
  flex: 1;
  color: #222;
  font-size: 28rpx;
}

.info-value.description {
  white-space: pre-wrap;
  line-height: 1.5;
}

/* 图片卡片 */
.image-card {
  background: #fff;
  padding: 32rpx 24rpx;
  border-radius: 16rpx;
  margin-bottom: 28rpx;
  box-shadow: 0 2rpx 8rpx #f0f0f0;
}

.image-scroll {
  white-space: nowrap;
  margin: 0 -24rpx;
  padding: 0 24rpx;
}

.order-image {
  display: inline-block;
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 8rpx #e0e0e0;
}

.order-image:last-child {
  margin-right: 0;
}

.image-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

.placeholder-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 12rpx;
  opacity: 0.4;
}

.placeholder-text {
  color: #bbb;
  font-size: 26rpx;
}

/* 处理记录 */
.processing-card {
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.timeline {
  position: relative;
  padding-left: 30rpx;
}

.timeline::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 2rpx;
  background: #e0e0e0;
}

.timeline-item {
  position: relative;
  display: flex;
  align-items: flex-start;
  margin-bottom: 32rpx;
}

.timeline-item:last-child {
  margin-bottom: 0;
}

.timeline-dot {
  position: relative;
  width: 36rpx;
  height: 36rpx;
  margin-right: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.timeline-icon {
  width: 32rpx;
  height: 32rpx;
}

.timeline-content {
  flex: 1;
  background: #f8f9fa;
  padding: 18rpx 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 6rpx #f0f0f0;
}

.timeline-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 6rpx;
}

.operator {
  font-size: 26rpx;
  color: #666;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.action {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 6rpx;
  display: block;
}

.description {
  color: #666;
  font-size: 26rpx;
}

/* 反馈信息 */
.feedback-card {
  background: #fff;
  padding: 32rpx 24rpx;
  border-radius: 16rpx;
  margin-bottom: 28rpx;
  box-shadow: 0 2rpx 8rpx #f0f0f0;
}

.feedback-item {
  background: #f8f9fa;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.feedback-item:last-child {
  margin-bottom: 0;
}

.feedback-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.handler {
  font-size: 26rpx;
  color: #666;
}

.feedback-image {
  width: 160rpx;
  height: 160rpx;
  margin-right: 16rpx;
  border-radius: 6rpx;
}

/* 返回按钮 */
.back-btn {
  background: linear-gradient(90deg, #ff9800 0%, #ffb74d 100%);
  color: #fff;
  padding: 24rpx 80rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 16rpx #ffe0b2;
  border: none;
}

.order-header {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx 24rpx 24rpx 24rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 12rpx #e6e6e6;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.order-status-tag {
  font-size: 32rpx;
  font-weight: bold;
  padding: 8rpx 32rpx;
  border-radius: 32rpx;
  margin-bottom: 16rpx;
  color: #fff;
  background: linear-gradient(90deg, #ff9800 0%, #ffb74d 100%);
  box-shadow: 0 2rpx 8rpx #ffe0b2;
}

.order-status-tag.pending {
  background: linear-gradient(90deg, #ffe58f 0%, #ffd666 100%);
}
.order-status-tag.processing {
  background: linear-gradient(90deg, #2196f3 0%, #64b5f6 100%);
}
.order-status-tag.done {
  background: linear-gradient(90deg, #43e97b 0%, #38f9d7 100%);
}
.order-status-tag.unclaimed {
  background: linear-gradient(90deg, #ff9800 0%, #ffb74d 100%);
}

.order-info {
  font-size: 26rpx;
  color: #888;
  margin-top: 4rpx;
}

.process-record {
  background: #fff;
  padding: 32rpx 24rpx;
  border-radius: 16rpx;
  margin-bottom: 28rpx;
  box-shadow: 0 2rpx 8rpx #f0f0f0;
}

.process-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.process-time {
  color: #888;
  font-size: 24rpx;
}

@media screen and (max-width: 400px) {
  .main-title { font-size: 36rpx; }
  .order-header, .info-card, .image-card, .process-record, .feedback-card { padding: 20rpx 8rpx; }
  .back-btn { padding: 18rpx 40rpx; font-size: 28rpx; }
} 