.detail-container {
  padding: 30rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #3498db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 错误提示 */
.error {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.error image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.retry-btn {
  margin-top: 30rpx;
  background: #3498db;
  color: #fff;
  border-radius: 8rpx;
  padding: 16rpx 32rpx;
}

/* 状态卡片 */
.status-card {
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.status {
  display: inline-block;
  padding: 8rpx 24rpx;
  border-radius: 6rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.status.pending {
  background: #fff3e0;
  color: #f57c00;
}

.status.processing {
  background: #e3f2fd;
  color: #1976d2;
}

.status.reported {
  background: #e8f5e9;
  color: #388e3c;
}

.status.done {
  background: #e8f5e9;
  color: #388e3c;
}

/* 信息卡片 */
.info-card {
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.info-row {
  display: flex;
  margin-bottom: 16rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  width: 160rpx;
  color: #666;
  font-size: 28rpx;
}

.info-value {
  flex: 1;
  color: #333;
  font-size: 28rpx;
}

.info-value.description {
  white-space: pre-wrap;
  line-height: 1.5;
}

/* 图片卡片 */
.image-card {
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.image-scroll {
  white-space: nowrap;
  margin: 0 -30rpx;
  padding: 0 30rpx;
}

.order-image {
  display: inline-block;
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
}

.order-image:last-child {
  margin-right: 0;
}

/* 处理记录 */
.processing-card {
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.timeline {
  position: relative;
  padding-left: 30rpx;
}

.timeline::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 2rpx;
  background: #e0e0e0;
}

.timeline-item {
  position: relative;
  padding-bottom: 30rpx;
}

.timeline-item:last-child {
  padding-bottom: 0;
}

.timeline-dot {
  position: absolute;
  left: -34rpx;
  top: 6rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #3498db;
  border: 4rpx solid #fff;
}

.timeline-content {
  background: #f8f9fa;
  padding: 20rpx;
  border-radius: 8rpx;
}

.timeline-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.operator {
  font-size: 26rpx;
  color: #666;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.action {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
  display: block;
}

/* 反馈信息 */
.feedback-card {
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.feedback-item {
  background: #f8f9fa;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.feedback-item:last-child {
  margin-bottom: 0;
}

.feedback-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.handler {
  font-size: 26rpx;
  color: #666;
}

.feedback-image {
  width: 160rpx;
  height: 160rpx;
  margin-right: 16rpx;
  border-radius: 6rpx;
}

/* 返回按钮 */
.back-btn {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  background: #3498db;
  color: #fff;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 12rpx rgba(52, 152, 219, 0.3);
} 