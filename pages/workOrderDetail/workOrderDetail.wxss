.detail-container {
  min-height: 100vh;
  background: #FFF9F0;
  padding: 24rpx;
}
.image-scroll {
  display: flex;
  flex-direction: row;
  overflow-x: auto;
  white-space: nowrap;
  margin-bottom: 32rpx;
}
.order-image {
  width: 220rpx;
  height: 220rpx;
  border-radius: 20rpx;
  margin-right: 16rpx;
  object-fit: cover;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.08);
}
.info-card {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(0,0,0,0.04);
  padding: 32rpx;
  margin-bottom: 32rpx;
}
.info-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 18rpx;
}
.info-label {
  color: #888;
  font-size: 28rpx;
  min-width: 120rpx;
}
.info-value {
  color: #333;
  font-size: 28rpx;
  flex: 1;
  text-align: right;
  word-break: break-all;
}
.progress-card {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(0,0,0,0.04);
  padding: 32rpx;
  margin-bottom: 32rpx;
}
.progress-title {
  color: #FF9900;
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 18rpx;
  display: block;
}
.progress-step {
  font-size: 28rpx;
  color: #FF9900;
  font-weight: bold;
  padding: 12rpx 0;
}
.progress-step.processing {
  color: #1296db;
}
.progress-step.done {
  color: #52c41a;
}
.back-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #FF9900;
  color: #fff;
  font-size: 32rpx;
  border-radius: 40rpx;
  font-weight: bold;
  margin-top: 32rpx;
  border: none;
  box-shadow: 0 2rpx 8rpx rgba(255,153,0,0.08);
  transition: background 0.2s;
}
.back-btn:active {
  background: #FFB84D;
} 