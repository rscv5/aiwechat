<view class="container">
  <view class="user-info">
    <view class="avatar-container">
      <image class="avatar" src="{{userInfo.avatarUrl || '/assets/icons/default-avatar.png'}}" mode="aspectFill"></image>
    </view>
    <view class="info-container">
      <text class="nickname">{{userInfo.nickname || '未登录'}}</text>
      <text class="role">{{userInfo.role || '普通用户'}}</text>
    </view>
  </view>

  <view class="menu-list">
    <view class="menu-item" bindtap="navigateToMyWorkorders">
      <text class="menu-text">我的工单</text>
      <text class="arrow">></text>
    </view>
    <view class="menu-item" bindtap="navigateToSettings">
      <text class="menu-text">设置</text>
      <text class="arrow">></text>
    </view>
    <view class="menu-item" bindtap="logout">
      <text class="menu-text logout">退出登录</text>
    </view>
  </view>
</view> 