/* pages/party/index.wxss */
.container {
  min-height: 100vh;
  background: #F8F9FA;
  padding: 24rpx;
}

/* 搜索栏样式 */
.search-bar {
  margin-bottom: 24rpx;
}

.search-input {
  display: flex;
  align-items: center;
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 16rpx 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.search-input input {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}

/* 社区党建标题样式 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
}

.section-more {
  font-size: 32rpx;
  color: #999999;
  padding: 10rpx;
}

/* 活动列表样式 */
.activity-list {
  height: calc(100vh - 200rpx);
}

.activity-item {
  display: flex;
  background: #FFFFFF;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
}

.activity-cover {
  width: 240rpx;
  height: 180rpx;
  background: #F5F5F5;
}

.activity-info {
  flex: 1;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.activity-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.activity-meta {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.meta-item {
  display: flex;
  align-items: center;
}

.meta-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.meta-text {
  font-size: 24rpx;
  color: #999999;
} 