/* pages/party/list.wxss */
.container {
  min-height: 100vh;
  background: #FFFFFF;
  padding: 32rpx 24rpx;
}

/* 搜索栏样式 */
.search-bar {
  margin-bottom: 32rpx;
  padding: 0 12rpx;
}

.search-input {
  display: flex;
  align-items: center;
  background: #F5F7FA;
  border-radius: 40rpx;
  padding: 20rpx 24rpx;
  transition: all 0.3s ease;
}

.search-input:active {
  background: #EEF0F5;
}

.search-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
  opacity: 0.6;
}

.search-input input {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}

.placeholder {
  color: #999999;
}

/* 活动列表样式 */
.activity-list {
  height: calc(100vh - 140rpx);
}

.activity-item {
  display: flex;
  background: #FFFFFF;
  border-radius: 20rpx;
  margin-bottom: 32rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.06);
  transition: all 0.3s ease;
}

.activity-item:active {
  transform: scale(0.98);
}

.activity-cover-wrapper {
  width: 200rpx;
  height: 200rpx;
  overflow: hidden;
  flex-shrink: 0;
}

.activity-cover {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.activity-info {
  flex: 1;
  padding: 24rpx 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.activity-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  line-height: 1.4;
}

.activity-meta {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  align-items: flex-end;
  margin-top: 12rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  width: 100%;
}

.meta-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 12rpx;
  opacity: 0.5;
}

.meta-text {
  font-size: 26rpx;
  color: #666666;
  text-align: right;
}

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
  color: #999999;
  font-size: 26rpx;
}

.loading-spinner {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
  border: 4rpx solid #EEEEEE;
  border-top-color: #666666;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.no-more {
  text-align: center;
  padding: 32rpx;
  color: #999999;
  font-size: 26rpx;
}