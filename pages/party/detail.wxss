/* pages/party/detail.wxss */
.container {
  min-height: 100vh;
  background: #F8F9FA;
}

.banner {
  width: 100%;
  height: 500rpx;
  background: #F5F5F5;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.content {
  padding: 32rpx;
  margin-top: -32rpx;
  background: #FFFFFF;
  border-radius: 32rpx 32rpx 0 0;
  position: relative;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 32rpx;
}

.meta {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 32rpx;
  padding-bottom: 32rpx;
  border-bottom: 1rpx solid #EEEEEE;
}

.meta-item {
  display: flex;
  align-items: center;
}

.label {
  font-size: 28rpx;
  color: #999999;
  margin-right: 16rpx;
  width: 120rpx;
}

.value {
  font-size: 28rpx;
  color: #333333;
  flex: 1;
}

.section {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 24rpx;
}

.section-content {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.image-item {
  width: calc(33.33% - 11rpx);
  height: 200rpx;
  border-radius: 8rpx;
  background: #F5F5F5;
} 