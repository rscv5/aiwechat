.container {
    padding: 30rpx;
    min-height: 100vh;
    background-color: #f5f5f5;
}

/* 表单样式 */
.form {
    background-color: #fff;
    border-radius: 12rpx;
    padding: 30rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-item {
    margin-bottom: 40rpx;
}

.form-label {
    font-size: 28rpx;
    color: #333;
    margin-bottom: 16rpx;
    font-weight: 500;
}

.picker {
    height: 88rpx;
    line-height: 88rpx;
    padding: 0 24rpx;
    background-color: #f8f8f8;
    border-radius: 8rpx;
    font-size: 28rpx;
    color: #333;
}

.picker.placeholder {
    color: #999;
}

/* 提交按钮 */
.submit-btn {
    margin-top: 60rpx;
    background-color: #07c160;
    color: #fff;
    border: none;
    border-radius: 8rpx;
    font-size: 32rpx;
    font-weight: 500;
}

.submit-btn::after {
    border: none;
}

/* 加载中样式 */
.loading {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 60rpx 0;
}

.loading-icon {
    width: 60rpx;
    height: 60rpx;
    border: 4rpx solid #f3f3f3;
    border-top: 4rpx solid #07c160;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin-bottom: 20rpx;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

/* 错误提示样式 */
.error {
    text-align: center;
    padding: 60rpx 0;
    color: #ff4d4f;
}

.error button {
    margin-top: 20rpx;
    font-size: 28rpx;
    color: #07c160;
    background: none;
    border: none;
    padding: 0;
}

.error button::after {
    border: none;
} 