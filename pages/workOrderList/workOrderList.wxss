.workorder-list-container {
  min-height: 100vh;
  background: #FFF9F0;
  position: relative;
  padding-bottom: 120rpx;
}
.order-scroll {
  height: calc(100vh - 100rpx);
  padding: 24rpx 24rpx 0 24rpx;
}
.order-card {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(0,0,0,0.04);
  margin-bottom: 24rpx;
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: box-shadow 0.2s;
}
.order-card:active {
  box-shadow: 0 8rpx 32rpx rgba(255,153,0,0.12);
}
.order-info {
  display: flex;
  flex-direction: column;
}
.order-building {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 8rpx;
}
.order-time {
  font-size: 24rpx;
  color: #999;
}
.order-status {
  font-size: 28rpx;
  font-weight: bold;
  padding: 8rpx 24rpx;
  border-radius: 32rpx;
  background: #FFF7E6;
  color: #FF9900;
}
.order-status.processing {
  background: #E6F7FF;
  color: #1296db;
}
.order-status.done {
  background: #E6FFE6;
  color: #52c41a;
}
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 120rpx;
}
.empty-img {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 24rpx;
}
.empty-tip {
  color: #999;
  font-size: 28rpx;
}
.fab-btn {
  position: fixed;
  right: 48rpx;
  bottom: 80rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: #FF9900;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 32rpx rgba(255,153,0,0.18);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  border: none;
  transition: background 0.2s;
}
.fab-btn:active {
  background: #FFB84D;
} 