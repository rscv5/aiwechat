/* pages/index/indexdetail/activities.wxss */
.container {
  padding: 40rpx 20rpx 20rpx 20rpx; /* Increased top padding */
  background-color: #F8F9FA; /* Light background for the page */
  min-height: 100vh; /* Ensure container takes at least full viewport height */
  box-sizing: border-box; /* Include padding in the element's total width and height */
}

.activity-card-container {
  background-color: #FFFFFF;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.activity-title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  margin: 40rpx 0 20rpx;
  color: #333;
}

.activity-meta {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
  flex-wrap: wrap;
}

.activity-date {
  margin-right: 20rpx;
}

.activity-location {
    /* No margin-right for the last item */
}

.activity-images {
  margin-top: 20rpx;
}

.activity-image {
  width: 100%;
  margin-bottom: 20rpx; /* Increased margin */
  border-radius: 12rpx; /* Rounded corners for images */
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05); /* Lighter shadow for images */
}

.activity-image:last-child {
  margin-bottom: 0; /* No bottom margin for the last image */
}

/* 轮播图样式 */
.activity-swiper {
  width: 100%;
  height: 500rpx; /* 增加高度 */
}

.swiper-image {
  width: 100%;
  height: 100%;
}

/* 活动描述样式 */
.activity-desc {
  margin: 30rpx;
  padding: 30rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}