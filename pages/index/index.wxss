/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #F8F9FA;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  padding: 24rpx;
}

/* 社区头部样式 */
.community-header {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
}

.community-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 12rpx;
}

.community-info {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.community-desc {
  font-size: 26rpx;
  color: #999999;
}

/* 区块样式 */
.section {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.section-more {
  font-size: 32rpx;
  color: #999999;
  font-weight: 300;
  padding: 0 8rpx;
}

/* 卡片滚动区域 */
.card-scroll {
  display: flex;
  flex-direction: row;
  overflow-x: auto;
  white-space: nowrap;
  padding-bottom: 8rpx;
}

/* 卡片通用样式 */
.party-card, .activity-card, .notice-card {
  display: inline-block;
  width: 280rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  margin-right: 24rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
}

/* 党建卡片特殊样式 */
.party-card {
  border-top: 4rpx solid #E74C3C;
}

.cover {
  width: 100%;
  height: 160rpx;
  background: #F5F5F5;
}

.info {
  padding: 20rpx;
}

.title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 12rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.meta {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.date, .location {
  font-size: 24rpx;
  color: #999999;
  margin-right: 12rpx;
}

.desc {
  font-size: 24rpx;
  color: #666666;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
