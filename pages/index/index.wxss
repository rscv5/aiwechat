/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.community-header {
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.community-name {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 10rpx;
}

.community-info {
  font-size: 28rpx;
  color: var(--secondary-color);
}

.swiper-container {
  margin: 20rpx 0;
  height: 300rpx;
  overflow: hidden;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.quick-entry {
  margin-top: 20rpx;
}

.grid-container {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
}

.grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 200rpx;
}

.grid-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
}

.grid-text {
  font-size: 28rpx;
  color: var(--text-color);
}

.card-scroll {
  display: flex;
  flex-direction: row;
  overflow-x: auto;
  white-space: nowrap;
  padding-bottom: 8rpx;
}
.activity-card {
  display: inline-block;
  width: 320rpx;
  background: #FFF7E6;
  border-radius: 20rpx;
  margin-right: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(255,153,0,0.08);
  overflow: hidden;
}
.cover {
  width: 100%;
  height: 160rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.info {
  padding: 16rpx;
}
.title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 8rpx;
  display: block;
}
.date, .location {
  font-size: 24rpx;
  color: #FF9900;
  margin-right: 8rpx;
}

.notice-card {
  display: inline-block;
  width: 320rpx;
  background: #FFF7E6;
  border-radius: 20rpx;
  margin-right: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(255,153,0,0.08);
  padding: 16rpx;
}
.info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}
.title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}
.date {
  font-size: 24rpx;
  color: #FF9900;
}
.desc {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
  display: block;
}
