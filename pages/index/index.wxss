/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #FFF9F0;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.community-header {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(0,0,0,0.04);
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.community-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.community-info {
  font-size: 28rpx;
  color: #FFB84D;
}

.swiper-container {
  margin: 20rpx 0;
  height: 300rpx;
  overflow: hidden;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.quick-entry {
  margin-top: 20rpx;
}

.grid-container {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
}

.grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 200rpx;
}

.grid-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
}

.grid-text {
  font-size: 28rpx;
  color: var(--text-color);
}

.card-scroll {
  display: flex;
  flex-direction: row;
  overflow-x: auto;
  white-space: nowrap;
  padding-bottom: 8rpx;
}
.activity-card, .notice-card {
  display: inline-block;
  width: 320rpx;
  background: #fff;
  border-radius: 24rpx;
  margin-right: 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(0,0,0,0.04);
  overflow: hidden;
  padding: 0;
}
.cover {
  width: 100%;
  height: 160rpx;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
}
.info {
  padding: 24rpx;
}
.title {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 8rpx;
  display: block;
}
.date, .location {
  font-size: 24rpx;
  color: #FF9900;
  margin-right: 8rpx;
}
.desc {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
  display: block;
}
