.container {
  min-height: 100vh;
  background: #fff;
  padding: 32rpx;
  box-sizing: border-box;
}

.big-image-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx;
}

.big-image {
  width: 100%;
  height: 60vh;
  object-fit: contain;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.08);
}

.big-title {
  margin-top: 24rpx;
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  text-align: center;
}