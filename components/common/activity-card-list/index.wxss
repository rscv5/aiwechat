.card-scroll {
  display: flex;
  flex-direction: row;
  overflow-x: auto;
  white-space: nowrap;
  padding-bottom: 8rpx;
}
.activity-card {
  display: inline-block;
  width: 320rpx;
  background: var(--primary-bg);
  border-radius: 20rpx;
  margin-right: 20rpx;
  box-shadow: 0 4rpx 16rpx var(--shadow-color);
  overflow: hidden;
}
.cover {
  width: 100%;
  height: 160rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.info {
  padding: 16rpx;
}
.title {
  font-size: 28rpx;
  color: var(--text-title);
  font-weight: bold;
  margin-bottom: 8rpx;
  display: block;
}
.date, .location {
  font-size: 24rpx;
  color: var(--primary-color);
  margin-right: 8rpx;
} 