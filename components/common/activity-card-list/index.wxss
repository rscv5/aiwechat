.card-scroll {
  display: flex;
  flex-direction: row;
  overflow-x: auto;
  white-space: nowrap;
  padding-bottom: 8rpx;
}
.activity-card {
  display: inline-block;
  width: 320rpx;
  background: #fff;
  border-radius: 24rpx;
  margin-right: 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(0,0,0,0.04);
  overflow: hidden;
  padding: 0;
}
.cover {
  width: 100%;
  height: 160rpx;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
}
.info {
  padding: 24rpx;
}
.title {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 8rpx;
  display: block;
}
.date, .location {
  font-size: 24rpx;
  color: #FF9900;
  margin-right: 8rpx;
} 