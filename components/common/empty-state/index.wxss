.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 120rpx;
}
.empty-img {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 24rpx;
}
.empty-title {
  color: #333;
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}
.empty-subtitle {
  color: #999;
  font-size: 26rpx;
  margin-bottom: 32rpx;
}
.empty-btn {
  background: #FF9900;
  color: #fff;
  font-size: 28rpx;
  border-radius: 32rpx;
  padding: 0 48rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 2rpx 8rpx rgba(255,153,0,0.08);
}
.empty-btn:active {
  background: #FFB84D;
} 