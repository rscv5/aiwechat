.card-scroll {
  display: flex;
  flex-direction: row;
  overflow-x: auto;
  white-space: nowrap;
  padding-bottom: 8rpx;
}
.notice-card {
  display: inline-block;
  width: 320rpx;
  background: var(--primary-bg);
  border-radius: 20rpx;
  margin-right: 20rpx;
  box-shadow: 0 4rpx 16rpx var(--shadow-color);
  padding: 16rpx;
}
.info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}
.title {
  font-size: 28rpx;
  color: var(--text-title);
  font-weight: bold;
}
.date {
  font-size: 24rpx;
  color: var(--primary-color);
}
.desc {
  font-size: 24rpx;
  color: var(--text-body);
  margin-top: 8rpx;
  display: block;
} 